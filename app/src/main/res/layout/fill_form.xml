<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FormFill">

    <ImageView
        android:id="@+id/persona_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/personaaisymbol"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let’s Get to Know Your Business"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/persona_symbol"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="These details will help us create the most accurate and effective user personas for your brand"
        android:paddingHorizontal="10dp"
        android:textSize="15sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading"/>

    <TextView
        android:id="@+id/brandnametxt"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#143257"
        android:text="Brand Name*"
        android:layout_marginLeft="12dp"/>

    <EditText
        android:id="@+id/brand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your brand’s name"
        android:padding="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/brandnametxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/product_descr_txt"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/brand_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#143257"
        android:text="Product Description*"
        android:layout_marginLeft="12dp"/>

    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your problem statement details\n\n\n"
        android:background="@drawable/bg"
        android:padding="8dp"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/product_descr_txt"
        android:maxLines="10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/businesstype_txt"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#143257"
        android:text="Product Description*"
        android:layout_marginLeft="12dp"/>


    <EditText
        android:id="@+id/business_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Business Type"
        android:textColor="@color/black"
        android:background="@drawable/bg"
        android:padding="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/businesstype_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:id="@+id/industry_txt"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/business_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#143257"
        android:text="Industry*"
        android:layout_marginLeft="12dp"/>


    <EditText
        android:id="@+id/industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Industry"
        android:textColor="@color/black"
        android:background="@drawable/bg"
        android:padding="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/industry_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@color/black"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/industry"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/submit_bt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>