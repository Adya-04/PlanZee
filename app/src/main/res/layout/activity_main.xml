<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
<TextView
    android:id="@+id/completed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Completed !!"
    android:textSize="28sp"
    android:layout_marginHorizontal="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:gravity="center"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Business Idea is ready to Go: "
        android:textSize="28sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/completed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center"/>


    <ImageView
        android:id="@+id/business_plan"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/competitor"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:background="@drawable/img_1"
        app:layout_constraintTop_toTopOf="@id/business_plan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/business_plan" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/competitor"
        android:text="Competitor"
        app:layout_constraintRight_toRightOf="@id/competitor"/>

    <ImageView
        android:id="@+id/mvp"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:background="@drawable/img_2"
        app:layout_constraintTop_toBottomOf="@id/business_plan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>